<script>
    function createOptions(selectId, maxOptions) {
        const selectElement = document.getElementById(selectId);
        for (let i = 0; i <= maxOptions; i++) {
            const option = document.createElement("option");
            option.value = i;
            option.text = i;
            selectElement.appendChild(option);
        }
    }

    const foodAndDrinkItems = [
        "Nasgor", "Mie", "Ayam", "Kuah", "Magelang", "Burjo",
        "Teteh", "Ruk", "Lo", "PI", "POP", "TEH"
    ];

    foodAndDrinkItems.forEach(item => createOptions(item, 10));

    document.getElementById("bookingModal").addEventListener("submit", function(event) {
        event.preventDefault();

        // Check if any of the required fields are empty
        const name = document.getElementById("name").value.trim();
        const people = document.getElementById("people").value.trim();
        const date = document.getElementById("date").value;

        if (name === '' || people === '' || date === '') {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Silakan isi semua data terlebih dahulu!',
            });
        } else {
            Swal.fire({
                icon: 'success',
                title: 'Pemesanan Berhasil',
                text: 'Terima kasih, pemesanan Anda telah berhasil.',
            }).then(function() {
                // Close the modal
                $('#bookingModal').modal('hide');
                // Optionally, reset the form fields
                document.getElementById("bookingModal").reset();
            });
        }
    });
</script>


